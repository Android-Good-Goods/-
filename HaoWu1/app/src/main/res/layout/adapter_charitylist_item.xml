<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_charitylist_cimage"
            android:scaleType="fitXY"
            android:src="@drawable/ic_moren_goods"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">
                <TextView
                    android:id="@+id/tv_charitylist_cname"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="蒲公英计划"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_charity_cstate"
                    android:background="@color/Green"
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="进行中"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_charitylist_ccontent"
                android:layout_margin="5dp"
                android:textSize="10dp"
                android:text="山区的孩子需要你们帮助啊，你们赶快伸出援手号码，一起组建一个好的环境"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="5dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/charity_scan"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:textColor="@color/Black"
                        android:layout_gravity="center"
                        android:text="浏览人数："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_charitylist_cscannum"
                        android:text="5"
                        android:textColor="@color/Black"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/charity_join"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:textColor="@color/Black"
                        android:layout_gravity="center"
                        android:text="参与人数："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_charitylist_cjoinnum"
                        android:text="5"
                        android:textColor="@color/Black"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
